<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/booking_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/booking_place_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Place Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="@id/booking_image"
            app:layout_constraintStart_toEndOf="@id/booking_image"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/booking_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Address"
            android:textSize="14sp"
            android:textColor="#666666"
            app:layout_constraintTop_toBottomOf="@id/booking_place_name"
            app:layout_constraintStart_toEndOf="@id/booking_image"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/booking_checkin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Check-in: 01/01/2024"
            android:textSize="12sp"
            android:textColor="#888888"
            app:layout_constraintTop_toBottomOf="@id/booking_address"
            app:layout_constraintStart_toEndOf="@id/booking_image"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/booking_checkout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:text="Check-out: 05/01/2024"
            android:textSize="12sp"
            android:textColor="#888888"
            app:layout_constraintTop_toBottomOf="@id/booking_checkin"
            app:layout_constraintStart_toEndOf="@id/booking_image"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/booking_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$500.00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/green_brand"
            app:layout_constraintTop_toBottomOf="@id/booking_checkout"
            app:layout_constraintStart_toEndOf="@id/booking_image"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/booking_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmed"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/search_bar_background"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@id/booking_checkout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

